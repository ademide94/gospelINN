

<div class="page-header parallax clearfix" style="background-image:url(http://placehold.it/1200x300&amp;text=IMAGE+PLACEHOLDER);">
    <div class="title-subtitle-holder">
        <div class="title-subtitle-holder-inner">
            <h2>Send Newsletter</h2>
        </div>
    </div>
</div>
<!-- End Page Header -->
<!-- Breadcrumbs -->
<div class="lgray-bg breadcrumb-cont">
    <div class="container">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Admin Page", "Index", "Admin")</li>
            <li class="active">Send Newsletter</li>
        </ol>
    </div>
</div>
<!-- Start Body Content -->
<div class="main" role="main">
    <div id="content" class="content full">
        <div class="container">
            <div class="row">
                
                @using (Html.BeginForm("sendNewsletter", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()


                    

                    <div class="panel panel-info">
                        <div class="panel-heading ">
                            <h3> Message </h3>

                        </div>

                        <div class="panel-body">
                            <input id="subject" name="subject" class="col-md-12 " placeholder="Subject" />
                            <textarea placeholder="Text" class="col-md-12 " spellcheck="true" draggable="false" name="message" required title="Newsletter" inputmode="email" id="message"> </textarea>
                        </div>
                        <div class="panel-footer">
                            <div class="row">
                                <div class="col-md-4"><hr /></div>
                                <input class="col-md-4 btn-info" type="submit" value="Send To All" />
                                <div class="col-md-4 "><hr /></div>
                            </div>
                        </div>
                    </div>




                    <br />

                }
                <div class="form-group">
                    <div>

                        <div class="col-md-12 appear-animation bounceInRight appear-animation-visible" data-appear-animation="bounceInRight">
                            @{
                                if (ViewBag.Status == "Done")
                                {
                                    <div class="alert alert-success fade in"> <a class="close" data-dismiss="alert" href="#">×</a> <strong>@ViewBag.Status</strong> Message successfully sent to all Users </div>

                                }
                                else if (ViewBag.Status == "Error")
                                {
                                    <div class="alert alert-error fade in"> <a class="close" data-dismiss="alert" href="#">×</a> <strong>@ViewBag.Status</strong> Something went Wrong! </div>

                                }

                            }
                        </div>


                    </div>
                </div>
            </div>

        </div>
    </div>
</div>




