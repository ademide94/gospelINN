@model IEnumerable<GospelInnMinistry.Models.Medium>

<!-- Start Page Header -->
<div class="page-header parallax clearfix" style="background-image:url(http://placehold.it/1200x300&amp;text=IMAGE+PLACEHOLDER);">
    <div class="title-subtitle-holder">
        <div class="title-subtitle-holder-inner">
            <h2>Gallery</h2>
        </div>
    </div>
</div>
<!-- End Page Header -->
<!-- Breadcrumbs -->
<div class="lgray-bg breadcrumb-cont">
    <div class="container">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
          
            <li class="active">Gallery</li>
        </ol>
    </div>
</div>
<!-- Start Body Content -->
<div class="main" role="main">
    <div id="content" class="content full">
        <div class="container">
            <div class="row">
                <div class="panel panel-info">
                    <div class="panel-heading">PICTURES</div>
                    <div class="panel-heading">
                        <div class="form-horizontal">


                        </div>   @using (Html.BeginForm("Gallery", "Media", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()



                            <div class="form-group ">



                                @Html.DropDownList("Group", new List<SelectListItem>
{

new SelectListItem{ Text="Strasoda", Value = "1" },
new SelectListItem{ Text="Living Voices", Value = "2" },
new SelectListItem{ Text="Alabaster", Value = "3" },
new SelectListItem{ Text="Gospel Inn Literature", Value = "4" },
new SelectListItem{ Text="Gospel Inn Children", Value = "5" },
new SelectListItem{ Text="Turning Point Radio", Value = "6" },
new SelectListItem{ Text="Vine Drama", Value = "7" },
new SelectListItem{ Text="Normal", Value = "8" },

})

                                <input type="submit" value="Filter" class="btn btn-primary" />


                            </div>


                        }
                    </div>


                        <div class="panel-body" style="overflow-x:scroll!important;height:500px!important;">



                          
                            <script src="~/Scripts/jquery-1.10.2.min.js"></script>
                            <script src="~/Scripts/jquery.validate.min.js"></script>
                            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

                            @{


                                if (Model.Count() == 0)
                                {
                                    @Html.Label("No images for the selected filter")

                                }

                                else
                                {



                                    <ul class="sort-destination isotope-grid isotope" data-sort-id="gallery" style="position: relative; overflow: hidden; height: 162.281px;">

                                        @foreach (var item in Model)
                                        {

                                            <li class="col-md-6 col-sm-6 grid-item format-image isotope-item" style="position: absolute; left: 0px; top: 0px; transform: translate3d(0px, 0px, 0px);">
                                                <div class="grid-item-inner"> <a href="@Html.DisplayFor(modelItem => item.ContentLocation)" data-rel="prettyPhoto" class="media-box"> <img src="@Html.DisplayFor(modelItem => item.ContentLocation)" alt=""> <span class="zoom"><span class="icon"><i class="icon-image"></i></span></span></a> </div>
                                            </li>

                                        }

                                    </ul>



                                }
                            }

                        </div>
                        <div class="panel-footer">
                            
                         
                          
                    
                    </div>
                    </div>

                            </div>
            <!-- Pagination -->
            

            </div>
        </div>
    </div>





 


